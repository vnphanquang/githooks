{
	"name": "@vnphanquang/githooks",
	"version": "1.0.1",
	"exports": {
		".": "./src/mod.ts",
		"./bin": "./src/bin.ts",
		"./errors": "./src/errors.ts",
		"./constants": "./src/constants.ts"
	},
	"publish": {
		"include": [
			"src/**/*.ts",
			"README.md",
			"LICENCE",
			"deno.json"
		]
	},
	"tasks": {
		"init": "deno run --allow-read --allow-write=\".githooks\" --allow-run=\"git\" src/bin.ts init",
		"test": "deno test --allow-read --allow-write --allow-run --allow-net --clean --coverage",
		"coverage": "deno coverage --html",
		"changesets": "deno run -A npm:@changesets/cli",
		"ci:test": "deno test -A --clean --coverage=coverage",
		"ci:coverage": "deno coverage --lcov --output=./coverage.lcov coverage",
		"ci:changesets": "deno run -A npm:@changesets/cli version"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 100,
		"indentWidth": 2,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve"
	}
}
